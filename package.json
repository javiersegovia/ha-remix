{
  "name": "hoyadelantas-remix",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "prebuild": "rimraf {build,public/build}",
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "build:server": "esbuild --platform=node --format=cjs ./server.ts --outdir=build --bundle",
    "dev": "run-p dev:*",
    "dev:build": "cross-env NODE_ENV=development npm run build:server -- --watch",
    "dev:css": "cross-env NODE_ENV=development npm run generate:css -- --watch",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:server": "cross-env NODE_ENV=development node --inspect --require ./node_modules/dotenv/config --require ./mocks ./build/server.js",
    "docker": "docker-compose up -d",
    "deploy": "pm2 deploy pm2.config.js production",
    "format": "prettier --write .",
    "generate:css": "npx tailwindcss -i ./app/styles/base.css -o ./app/styles/tailwind.css",
    "generate:schema": "prisma generate",
    "postgenerate:schema": "npm run lint",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint . --fix",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "setup": "prisma generate && prisma migrate deploy && prisma db seed",
    "start": "cross-env NODE_ENV=production node ./build/server.js",
    "start:mocks": "cross-env NODE_ENV=production node --require ./mocks --require dotenv/config ./build/server.js",
    "studio": "prisma studio",
    "seed": "prisma db seed",
    "test": "dotenv -e .env.test -- vitest --no-threads",
    "pretest": "dotenv -e .env.test prisma migrate deploy",
    "test:coverage": "dotenv -e .env.test -- vitest --no-threads --coverage",
    "pretest:coverage": "rimraf coverage && dotenv -e .env.test prisma migrate deploy",
    "db:reset": "dotenv -e .env.test -- prisma migrate reset --force --skip-seed && dotenv -e .env.test -- prisma db seed",
    "test:e2e:dev": "dotenv -e .env.test -- start-server-and-test dev http://localhost:3000 \"npx cypress open\"",
    "pretest:e2e:dev": "npm run db:reset",
    "test:e2e:run": "dotenv -e .env.test cross-env PORT=8811 start-server-and-test start:mocks http://localhost:8811 \"npx cypress run\"",
    "pretest:e2e:run": "npm run build && npm run db:reset",
    "typecheck": "tsc -b && tsc -b cypress",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "endOfLine": "auto"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build",
    "/postgres-data"
  ],
  "dependencies": {
    "@aws-sdk/client-ses": "^3.188.0",
    "@aws-sdk/client-sns": "^3.188.0",
    "@aws-sdk/credential-provider-node": "^3.188.0",
    "@headlessui/react": "^1.6.6",
    "@prisma/client": "^4.4.0",
    "@remix-run/express": "^1.7.0",
    "@remix-run/node": "^1.7.0",
    "@remix-run/react": "^1.7.0",
    "@remix-run/server-runtime": "^1.7.0",
    "@remix-validated-form/with-zod": "^2.0.1",
    "bcryptjs": "^2.4.3",
    "clsx": "^1.2.1",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "csv": "^6.2.0",
    "csv-parser": "^3.0.0",
    "date-fns": "^2.29.2",
    "email-templates": "^10.0.1",
    "express": "^4.18.1",
    "isbot": "^3.5.1",
    "morgan": "^1.10.0",
    "ms": "^2.1.3",
    "nodemailer": "^6.7.8",
    "nprogress": "^0.2.0",
    "pug": "^3.0.2",
    "react": "^18.2.0",
    "react-currency-input-field": "^3.6.4",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.34.2",
    "react-hot-toast": "^2.3.0",
    "react-icons": "^4.4.0",
    "react-select": "^5.4.0",
    "remix-utils": "^3.3.0",
    "remix-validated-form": "^4.5.5",
    "tiny-invariant": "^1.2.0",
    "zod": "^3.18.0",
    "zod-form-data": "^1.2.1"
  },
  "devDependencies": {
    "@aws-sdk/types": "^3.188.0",
    "@faker-js/faker": "^7.4.0",
    "@remix-run/dev": "^1.7.0",
    "@remix-run/eslint-config": "^1.7.0",
    "@testing-library/cypress": "^8.0.3",
    "@testing-library/dom": "^8.17.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/email-templates": "^10.0.0",
    "@types/eslint": "^8.4.6",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.7.13",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@vitejs/plugin-react": "^2.0.1",
    "@vitest/coverage-c8": "^0.22.1",
    "autoprefixer": "^10.4.8",
    "c8": "^7.12.0",
    "cookie": "^0.5.0",
    "cypress": "^10.6.0",
    "dotenv": "^16.0.1",
    "dotenv-cli": "^6.0.0",
    "esbuild": "^0.15.5",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-prettier": "^4.2.1",
    "fishery": "^2.2.2",
    "happy-dom": "^6.0.4",
    "msw": "^0.47.4",
    "npm-run-all": "^4.1.5",
    "npm-which": "^3.0.1",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "prisma": "^4.4.0",
    "rimraf": "^3.0.2",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.1.8",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.7.4",
    "vite": "^3.0.9",
    "vite-tsconfig-paths": "^3.5.0",
    "vitest": "^0.22.1"
  },
  "engines": {
    "node": ">=14"
  },
  "prisma": {
    "seed": "ts-node --require tsconfig-paths/register prisma/seed.ts"
  }
}
